<?xml version="1.0"?>

<block>
	<name>WiFi Sync Long</name>
	<key>ieee802_11_sync_long</key>
	<category>[IEEE802.11]</category>
	<import>import ieee802_11</import>
	<make>ieee802_11.sync_long($sync_length, $log, $debug)</make>

	<param>
		<name>Log</name>
		<key>log</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>

	<param>
		<name>Debug</name>
		<key>debug</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>

	<param>
		<name>Sync Length</name>
		<key>sync_length</key>
		<value>240</value>
		<type>int</type>
	</param>

	<check>$sync_length > 0</check>

	<sink>
		<name>in</name>
		<type>complex</type>
		<nports>1</nports>
	</sink>

	<sink>
		<name>in delayed</name>
		<type>complex</type>
		<nports>1</nports>
	</sink>

	<source>
		<name>out</name>
		<type>complex</type>
		<nports>1</nports>
	</source>

</block>
