<?xml version="1.0"?>
<block>
  <name>burst_downmix</name>
  <key>iridium_burst_downmix</key>
  <category>iridium</category>
  <import>import iridium</import>
  <make>iridium.burst_downmix($sample_rate, $search_depth, $hard_max_queue_len, $input_taps, $start_finder_taps, $handle_multiple_frames_per_burst)</make>

  <param>
    <name>Sample Rate</name>
    <key>sample_rate</key>
    <type>int</type>
  </param>

  <param>
    <name>Search Depth</name>
    <key>search_depth</key>
    <type>int</type>
  </param>

  <param>
    <name>Hard Max Queue Length</name>
    <key>hard_max_queue_len</key>
    <type>int</type>
  </param>

  <param>
    <name>Input Taps</name>
    <key>input_taps</key>
    <type>real_vector</type>
  </param>

  <param>
    <name>Start Finder Taps</name>
    <key>start_finder_taps</key>
    <type>real_vector</type>
  </param>

  <param>
    <name>Handle Multiple Frames Per Burst</name>
    <key>handle_multiple_frames_per_burst</key>
    <type>bool</type>
  </param>


  <sink>
    <name>cpdus</name>
    <type>message</type>
  </sink>

  <source>
    <name>cpdus</name>
    <type>message</type>
  </source>

  <source>
    <name>burst_handled</name>
    <type>message</type>
  </source>

</block>
