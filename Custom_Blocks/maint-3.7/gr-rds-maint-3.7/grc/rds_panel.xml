<?xml version="1.0"?>
<!--
###################################################
##RDS Data Sink
###################################################
 -->
<block>
	<name>RDS Panel</name>
	<key>gr_rds_panel</key>
	<category>[RDS]</category>
	<import>import rds</import>
	<make>#set $parent = $notebook() and 'self.%s.GetPage(%s)'%$notebook() or 'self'
rds.rdsPanel($freq, $(parent).GetWin())
#if not $grid_pos()
$(parent).Add(self.$(id).panel)
#else
$(parent).GridAdd(self.$(id).panel, $(', '.join(map(str, $grid_pos()))))
#end if</make>
	<callback>set_frequency($freq);</callback>
	
	<param>
		<name>Frequency</name>
		<key>freq</key>
		<value>0</value>
		<type>real</type>
		<hide>part</hide>
	</param>
	
	<param>
		<name>Grid Position</name>
		<key>grid_pos</key>
		<value></value>
		<type>grid_pos</type>
	</param>

	<param>
		<name>Notebook</name>
		<key>notebook</key>
		<value></value>
		<type>notebook</type>
	</param>
	
	<sink>
		<name>in</name>
		<type>message</type>
	</sink>
	<doc>Any change in Frequency parameter will trigger clearing of panel data and set corresponding text on panel.</doc>
</block>
